{
  "pluginAlias": "GarageDoorLoxoneDeconz",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Garage Door",
        "required": true
      },
      "user": {
        "title": "Loxone admin username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Loxone admin password",
        "type": "string",
        "required": true
      },
      "urldec": {
        "title": "URL deCONZ (with port)",
        "type": "string",
        "required": true
      },
      "apidec": {
        "title": "API Key deCONZ",
        "type": "string",
        "required": true
      },
      "urllox": {
        "title": "URL Loxone (with port)",
        "type": "string",
        "required": true
      },
      "garagedoorlox": {
        "title": "Loxone garage door item name",
        "type": "string",
        "required": true
      },
      "status_update_delay": {
        "title": "Status Update Delay",
        "type": "string",
        "default": "15",
        "placeholder": "# of seconds to close",
        "required": true
      },
      "poll_state_delay": {
        "title": "Enable Polling (in seconds)",
        "type": "integer",
        "placeholder": "# of seconds"
      },
      "ignore_errors": {
        "title": "Ignore Errors",
        "type": "boolean"
      },
      "log_polling": {
        "title": "Log Polling",
        "type": "boolean"
      }
    }
  },
  "form": [
    "name",
    "user",
    "password",
    "urldec",
    "apidec",
    "urllox",
    "garagedoorlox",
    "status_update_delay",
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Polling Settings",
      "description": "Options for polling Garage Door when Home app is closed",
      "items": [
        "poll_state_delay",
        "log_polling"
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Advanced Settings",
      "description": "Don't change these, unless you understand what you're doing.",
      "items": [
        "ignore_errors"
      ]
    }
  ],
  "display": null
}